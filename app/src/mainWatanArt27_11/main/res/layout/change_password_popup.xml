<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_shape">

    <com.WattanArt.Utils.widgets.CustomeTextViewBold
        android:id="@+id/customeTextViewBold2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/change_password"
        android:textColor="@color/yellow"
        android:textSize="@dimen/font_size_xlarge"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/close_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="28dp"
        android:padding="4dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.WattanArt.Utils.widgets.CustomEditText
        android:id="@+id/old_pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="@string/old_pass"
        android:inputType="textPassword"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/font_size_large"

        android:background="@drawable/edit_text_background"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@id/close_popup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_popup" />

    <com.WattanArt.Utils.widgets.CustomEditText
        android:id="@+id/new_pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="@string/new_pass"
        android:inputType="textPassword"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/light_gray"
        android:background="@drawable/edit_text_background"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/font_size_large"

        app:layout_constraintEnd_toEndOf="@id/close_popup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_pass_et" />
    <com.WattanArt.Utils.widgets.CustomEditText
        android:id="@+id/confirm_pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/font_size_large"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@id/new_pass_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_pass_et" />

    <com.WattanArt.Utils.widgets.CustomeButtonBold
        android:id="@+id/save_btn"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/signup_btn_background"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass_et" />
    <!--</LinearLayout>-->


</android.support.constraint.ConstraintLayout>
