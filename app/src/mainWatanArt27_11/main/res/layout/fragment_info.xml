<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>

    <ImageView
        android:id="@+id/call_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_phone"
        android:contentDescription="@null"
        />

    <com.WattanArt.Utils.widgets.CustomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/call_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/call_img"
        android:textColor="@color/yellow"
        android:text="@string/phone" />
    <com.WattanArt.Utils.widgets.CustomeTextView
        android:id="@+id/call_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_img"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/call_img"
        android:text=""
        />


    <ImageView
        android:id="@+id/Address_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_img"
        android:layout_marginTop="20dp"
        android:padding="6dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:src="@drawable/ic_address"
        android:contentDescription="@null"
        />
    <com.WattanArt.Utils.widgets.CustomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Address_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/yellow"
        android:layout_toEndOf="@+id/Address_img"
        android:text="@string/address" />
    <com.WattanArt.Utils.widgets.CustomeTextView
        android:id="@+id/Address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Address_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/Address_img"
        android:text="" />

    <ImageView
        android:id="@+id/website_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Address_txt"
        android:layout_marginTop="1dp"
        android:padding="6dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:src="@drawable/ic_website"
        android:contentDescription="@null"
        />

    <com.WattanArt.Utils.widgets.CustomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Address_txt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/yellow"
        android:layout_toEndOf="@+id/Address_img"
        android:text="@string/website" />
    <com.WattanArt.Utils.widgets.CustomeTextView
        android:id="@+id/website_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/website_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/Address_img"
        android:text="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/website_txt"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.WattanArt.Utils.widgets.CircleImageView
            android:id="@+id/fbImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_facebook" />

        <com.WattanArt.Utils.widgets.CircleImageView
            android:id="@+id/twitterImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_tweeter" />

        <com.WattanArt.Utils.widgets.CircleImageView
            android:id="@+id/instaImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_instgram" />


    </LinearLayout>
</RelativeLayout>
