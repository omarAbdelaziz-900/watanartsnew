    <style name="Settings_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">@dimen/activity_settings_item_padding</item>-->
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/default_click_bg</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="autocheck">true</item>-->
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Settings_Item_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">10dp</item>
        <!--<item name="android:textColor">?msColorTextTitle</item>-->
    </style>

    <style name="Settings_Item_SubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">10dp</item>
        <!--<item name="android:textColor">?msColorTextSubTitle</item>-->
    </style>

    <style name="Settings_Item_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Settings_Item_CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

