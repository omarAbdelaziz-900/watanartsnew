<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_width="wrap_content"
    android:id="@+id/card_view_parent"
    android:layout_height="@dimen/_150sdp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150sdp">




        <ImageView
            app:layout_constraintBottom_toTopOf="@id/item_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_above="@id/item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_profile"
            android:scaleType="fitXY"
            android:id="@+id/items_img" />


        <com.WattanArt.Utils.widgets.CustomeTextViewBold
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/items_img"
            app:layout_constraintEnd_toStartOf="@id/items_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:id="@+id/item_tv"
            android:gravity="start"
            android:paddingStart="@dimen/_8sdp"
            android:text="Image"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>














